- if user_signed_in?
  #menu
    .menu-content
      %ul
        %li
          = link_to current_user do
            %i.fa.fa-user.fa-fw
            = current_user.username
        %li
          = link_to edit_user_registration_path do
            %i.fa.fa-pencil.fa-fw
            Edit profile
        %li
          = link_to destroy_user_session_path, method: :delete do
            %i.fa.fa-power-off.fa-fw
            Logout