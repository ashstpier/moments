%nav#nav
  .brand
    = link_to root_path do
      moments.
  - if user_signed_in?
    %ul
      %li
        = link_to new_card_path do
          %i.fa.fa-plus.fa-fw
      - if @event
        %li
          = link_to edit_card_path(@event) do
            %i.fa.fa-pencil.fa-fw
        %li
          = link_to card_path(@event), method: 'delete', data: {confirm: "Are you sure you want to delete this event?"} do
            %i.fa.fa-trash.fa-fw
      - if user_signed_in?
        %li
          = link_to '#', id: 'menu-toggle' do
            %i.fa.fa-bars.fa-fw
