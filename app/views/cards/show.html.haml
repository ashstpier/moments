.event
  .event-header{style: "background-image: url(#{image_url('dummy.jpg')})"}
    .event-date
      = @event.formatted_date
  .event-body
    .event-description
      %h1= @event.name
      %p= @event.description

      = link_to "edit card", edit_card_path(@event), class: 'btn'
      = link_to "delete card", card_path(@event), method: 'delete', class: 'btn'



